<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. The Map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 5. Map Type Menu (Top Right) -->

    <!-- Bottom Control Panel -->
    <Spinner
        android:id="@+id/spinnerMapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="16dp"
        android:background="#b8aeb7"
        android:minHeight="48dp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#e7b4ed">

        <!-- 3. Dropdown List for Locations -->
        <Spinner
            android:id="@+id/spinnerLocations"
            android:layout_width="411dp"
            android:layout_height="37dp"
            android:layout_margin="8dp"

            android:background="#b8aeb7"
            android:minHeight="48dp"
            android:padding="8dp" />

        <!-- 2. Table Layout for Quick Buttons -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayoutButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#b8aeb7"
                android:stretchColumns="*">
                <!-- Buttons added via Java -->
            </TableLayout>
        </HorizontalScrollView>

        <!-- 4. Details Button -->
        <Button
            android:id="@+id/btnDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_details"
            android:layout_margin="8dp"
            android:backgroundTint="#b8aeb7"/>
    </LinearLayout>
</RelativeLayout>